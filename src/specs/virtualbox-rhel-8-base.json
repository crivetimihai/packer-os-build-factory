{
  "variables": {
    "vm_name": "rhel-8-base",
    "vm_build": "virtualbox",
    
    "iso_local_url": "{{env `ISO_DIR`}}/rhel-8.0-x86_64-dvd.iso",
    "iso_download_url": "https://developers.redhat.com/download-manager/file/rhel-8.0-x86_64-dvd.iso",
    "iso_sha256": "005d4f88fff6d63b0fc01a10822380ef52570edd8834321de7be63002cc6cc43",

    "vm_version": "1.0",
    "vm_description": "{{user `vm_name`}} {{user `vm_build`}} {{timestamp}} by {{user `vm_author`}}",
    
    "vm_config": "rhel-8-base.cfg",
    "vm_guest_os_type": "RedHat_64",
    
    "vagrantfile_template": "files/rhel-8-base-vagrantfile",

    "playbook_file": "ansible/rhel-8-base-main.yml",
    "galaxy_file": "ansible/rhel-8-base-requirements.yml"
  },
  
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "headless": "{{user `headless`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "guest_additions_url": "{{user `iso_vbox_guest_additions_url`}}",
      "guest_additions_sha256": "{{user `iso_vbox_guest_additions_sha256`}}",
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--description", "{{user `vm_description`}}",
        "--version", "{{user `vm_version`}}"
      ],
      "guest_os_type": "{{user `vm_guest_os_type`}}",
      "disk_size": "{{user `vm_disk_size`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `vm_cpus`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `vm_memory`}}"],
        ["modifyvm", "{{.Name}}", "--ioapic", "on"],
        ["modifyvm", "{{.Name}}", "--pae", "on"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--bioslogodisplaytime", "1"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--usbehci", "off"]
      ],
      "boot_command": [
        "<up><wait><tab>",
        " text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `vm_config`}} net.ifnames=0",
        "<enter><wait>"
      ],

      "vm_name": "{{user `vm_build`}}-{{user `vm_name`}}",
      "iso_urls": [
        "{{user `iso_local_url`}}",
        "{{user `iso_download_url`}}"
      ],
      "iso_checksum": "{{user `iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "output_directory": "{{user `builds_dir`}}/{{user `vm_build`}}-{{user `vm_name`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "http_directory": "{{user `http_dir`}}",
      "ssh_username": "{{user `vm_ssh_user`}}",
      "ssh_password": "{{user `vm_ssh_pass`}}",
      "ssh_timeout": "{{user `vm_ssh_timeout`}}",
      "boot_wait": "{{user `boot_wait_time`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "provisioners/vbox.sh"
    },
    {
      "type": "shell",
      "inline": [
        "pip3 install --user --upgrade pip",
        "pip install --user --upgrade ansible"
      ]
    },    
    {
      "type": "ansible-local",
      "playbook_file": "{{user `playbook_file`}}",
      "galaxy_file": "{{user `galaxy_file`}}"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "provisioners/rhel-8-clean.sh"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "{{user `vagrantfile_template`}}",
      "compression_level": 9,
      "output": "{{user `builds_dir`}}/{{user `vm_build`}}-{{user `vm_name`}}/{{user `vm_build`}}-{{user `vm_name`}}.box",
      "keep_input_artifact": false
    },
    {
      "type": "shell-local",
      "inline": ["echo Build Complete!"]
    }
  ]
}
